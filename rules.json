{
  "rules": {
    "demo": {
      "$secretid":{
        "history": {
          ".read": true,
          "$revision": {
            /* Prevent overwriting existing revisions. */
            ".write": "data.val() === null"
          }
        },
        "checkpoint": {
          ".read": true,
          /* Ensure author of checkpoint is the same as the author of the revision they're checkpointing. */
          ".write": "data.parent().child('history').child(newData.child('id').val()).child('a').val() === newData.child('a').val()",
          ".validate": "newData.hasChildren(['a', 'o', 'id'])"
        },
        "users": {
          ".read": true,
          "$user": {
            ".write": true
          }
        }
      }
    },
    "home": {
